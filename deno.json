{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run -A --watch src/presentation/server/index.ts",
    "scrape": "deno run -A src/presentation/cli/scraper.ts",
    "test": "env $(grep -v '^#' .env.test | grep -v '^$' | xargs) deno test --allow-env --allow-read --allow-net --allow-ffi --no-check",
    "test:watch": "env $(grep -v '^#' .env.test | grep -v '^$' | xargs) deno test --allow-env --allow-read --allow-net --allow-ffi --no-check --watch",
    "test:unit": "env $(grep -v '^#' .env.test | grep -v '^$' | xargs) deno test --allow-env --allow-read --allow-net --allow-ffi --no-check src/**/*.test.ts",
    "test:integration": "env $(grep -v '^#' .env.test | grep -v '^$' | xargs) deno test --allow-env --allow-read --allow-net --allow-ffi --no-check tests/integration/**/*.test.ts",
    "test:coverage": "env $(grep -v '^#' .env.test | grep -v '^$' | xargs) deno test --allow-env --allow-read --allow-net --allow-ffi --no-check --coverage=coverage && deno coverage coverage",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "db:migration:new": "supabase migration new",
    "db:migrate": "supabase db reset",
    "db:migrate:apply": "supabase db push",
    "db:pull": "deno run -A npm:prisma@latest db pull",
    "db:generate": "deno run -A npm:prisma@latest generate",
    "db:studio": "deno run -A npm:prisma@latest studio",
    "db:test:setup": "deno run -A --env-file=.env.test npm:prisma@latest db push --force-reset"
  },
  "imports": {
    "@/": "./src/",
    "fastify": "npm:fastify@^4.26.0",
    "tsyringe": "npm:tsyringe@^4.8.0",
    "reflect-metadata": "npm:reflect-metadata@^0.2.0",
    "@prisma/client": "npm:@prisma/client@^6.0.0",
    "playwright": "npm:playwright@^1.40.0",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^0.5.0",
    "@fastify/cors": "npm:@fastify/cors@^8.5.0",
    "@fastify/env": "npm:@fastify/env@^4.3.0",
    "dotenv": "npm:dotenv@^16.4.0"
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "lib": ["deno.window", "dom"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    },
    "exclude": ["src/infrastructure/prisma/generated/**"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
