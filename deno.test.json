{
  "tasks": {
    "test": "deno test -A --coverage=coverage",
    "test:watch": "deno test -A --watch",
    "test:unit": "deno test -A src/**/*.test.ts",
    "test:integration": "deno test -A tests/integration/**/*.test.ts",
    "test:coverage": "deno test -A --coverage=coverage && deno coverage coverage --lcov --output=coverage.lcov"
  },
  "test": {
    "include": ["src/", "tests/"],
    "exclude": ["src/infrastructure/prisma/generated/"]
  }
}